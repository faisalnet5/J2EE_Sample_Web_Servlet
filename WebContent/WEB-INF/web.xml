<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		 xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
		 version="3.1">
  <display-name>Sample Web Servlet</display-name>
  <welcome-file-list>
    <welcome-file>username.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>servlet_one</servlet-name>
    <servlet-class>com.java.cyanicviews.SampleServlet</servlet-class>
    <init-param>
      <param-name>user</param-name>
      <param-value>Faisal</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>servlet_one</servlet-name>
    <url-pattern>/SampleServlet</url-pattern>
  </servlet-mapping>
</web-app>